<h1>Dice.com Job Scraper</h1>

<%= erb :search_bar, :locals => { :query => query } %>



<h3>Jobs in <%= query[1] %></h3>

<a href='http://www.glassdoor.com/index.htm'>powered by <img src='http://www.glassdoor.com/static/img/api/glassdoor_logo_80.png' title='Job Search' /></a>


<table class = 'table table-striped table-bordered table-condensed'>

  <tr>
    <th>Job Title</th>
    <th>Company</th>
    <th>Link</th>
    <th>Location</th>
    <th>Date Posted</th>
    <th>Company ID</th>
    <th>Job ID</th>
  </tr>

  <% results.each do |result| %>
    <tr>

      <% unless result.nil? %>
        <% result.each do |key, value| %>

          <% if key == :link %>
            <td><a href=<%= value %> >Link</a></td>

          <% else %>
            <td><%= value %></td>
          <% end %>

        <% end %>
      <% end %>

    </tr>

  <% end %>

</table>